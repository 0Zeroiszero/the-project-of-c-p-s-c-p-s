{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C Project",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "${workspaceFolder}/src/*.c",
        "-I${workspaceFolder}/include",
        "-o",
        "${workspaceFolder}/debug/output.exe"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}